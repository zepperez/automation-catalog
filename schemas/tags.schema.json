{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tags Configuration",
  "description": "Schema for data/tags.yaml",
  "type": "object",
  "required": ["tags"],
  "properties": {
    "tags": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "color"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the tag"
          },
          "name": {
            "type": "string",
            "description": "Display name of the tag"
          },
          "color": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$",
            "description": "Hex color code for the tag (e.g., #FF5733)"
          }
        }
      }
    }
  }
}
