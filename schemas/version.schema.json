{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Version Configuration",
  "description": "Schema for data/version.yaml",
  "type": "object",
  "required": ["version"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Version number in semantic versioning format (e.g., 1.0.0)"
    }
  }
}
