---
import '../styles/global.css';
import DarkModeToggle from '../components/DarkModeToggle';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Automation Catalog',
  description = 'DevOps Automation Team - Automation Tracking and Analytics'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body class="min-h-screen flex flex-col">
  <header class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 sticky top-0 z-50 transition-colors duration-200">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center space-x-8">
          <a href="/" class="text-2xl font-bold text-primary-600 dark:text-primary-400">
            ðŸ¤– Automation Catalog
          </a>
          <div class="hidden md:flex space-x-6">
            <a href="/" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Dashboard</a>
            <a href="/automations" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Automations</a>
            <a href="/calendar" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Calendar</a>
          </div>
        </div>
        <DarkModeToggle client:load />
      </div>
    </nav>
  </header>

  <main class="flex-grow">
    <slot />
  </main>

  <footer class="bg-gray-800 text-white mt-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="text-center text-gray-400">
        <p>&copy; 2025 DevOps Automation Team. All rights reserved.</p>
      </div>
    </div>
  </footer>
</body>
</html>
